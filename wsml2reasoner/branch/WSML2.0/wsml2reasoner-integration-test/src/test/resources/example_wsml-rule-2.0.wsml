wsmlVariant _"http://www.wsmo.org/wsml/wsml-syntax/wsml-rule"

namespace {_"http://www.example.org/rule#",
		wsml _"http://www.wsmo.org/wsml/wsml-syntax#",
		xsd _"http://www.w3.org/2001/XMLSchema#",
		
		rdf _"http://www.w3.org/1999/02/22-rdf-syntax-ns#"}

ontology About_Persons_rule

	concept Person
		name ofType xsd#string
		slogan ofType rdf#text
		hasChild impliesType Child

	concept Man subConceptOf Person
		hasWife impliesType Woman

	concept Woman subConceptOf Person
		hasHusband impliesType Man

	concept Child subConceptOf Person

	instance Homer memberOf Man
		name hasValue "Homer Simpson"
		hasChild hasValue Bart
		hasWife hasValue Marge

	instance Marge memberOf Woman
		name hasValue "Marge Simpson"
		hasChild hasValue Bart
		hasHusband hasValue Homer
	
	instance Bart memberOf Child
		name hasValue "Bart Simpson"
		slogan hasValue {rdf#text("Eat my shorts", "en"), rdf#text("Ay, caramba", "es")}  
		
	axiom IsSpanishSpeaker
		definedBy
			?x memberOf SpanishSpeaker impliedBy
				?x[slogan hasValue ?slogan] and
				xsd#langFromText(?language, ?slogan) and
				?language = "es". 

/*

a) Query the slogans of Bart. Slogans are represented by rdf#text data values, which have a text with a corresponding language.

Bart[slogan hasValue ?slogan]

b) Query all spanish speakers. We make use of the new built-in "wsml#langFromText", which extracts the language part of a rdf#text data value. 

?x memberOf SpanishSpeaker.
*/