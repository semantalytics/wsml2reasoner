wsmlVariant _"http://www.wsmo.org/wsml/wsml-syntax/wsml-core"

namespace { _"http://example.com/truthValue#",
		xsd _"http://www.w3.org/2001/XMLSchema#" } 

ontology TruthValueOntology

	concept Human
		name ofType xsd#string
	
	instance Gordon memberOf Human
		name hasValue xsd#string("Gordon Freeman")
		
	axiom isAwesome
		definedBy
			isAwesome(?x) impliedBy
				?x[name hasValue xsd#string("Gordon Freeman")] and
				true.
				
	axiom hasCrowbar
		definedBy
			hasCrowbar(?x) impliedBy
				?x[name hasValue xsd#string("Gordon Freeman")] and
				wsml#true.

	axiom isHero
		definedBy
			isSeriousSam(?x) impliedBy
				?x[name hasValue xsd#string("Gordon Freeman")] and
				false.
				
	axiom hasGravityGun
		definedBy
			hasRailgun(?x) impliedBy
				?x[name hasValue xsd#string("Gordon Freeman")] and
				wsml#false.
